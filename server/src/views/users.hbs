<h2>Users</h2>

<form method="GET" action="/users">
    <input type="text" name="search" placeholder="Enter filter text..." value="{{searchQuery}}">
    <button type="submit">Search</button>
</form>

<table>
    <thead>
        <tr>
            <th>Lastname</th>
            <th>Firstname</th>
            <th>Account Name</th>
            <th>Class</th>
            <th>First Login</th>
            <th>Last Login</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td>{{lastName}}</td>
            <td>{{firstName}}</td>
            <td>{{accountName}}</td>
            <td>{{class}}</td>
            <td>{{dateFormat firstLogin}}</td>
            <td>{{dateFormat lastLogin}}</td>
            <td>
                <a href="/users/{{userId}}">✏️</a>
                <a target="_blank" href="https://github.com/Teaching-HTL-Leonding/{{repository}}">GH</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
